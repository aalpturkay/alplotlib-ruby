<article class="flex flex-col items-start gap-6 border-t border-gray-200 pt-8 lg:flex-row dark:border-gray-700">
  <% if post.cover_image.attached? %>
    <%= image_tag post.cover_image.variant(resize_to_limit: [800, 400]), alt: post.title, class: "h-64 w-full rounded-lg object-cover lg:h-auto lg:w-1/3" %>
  <% else %>
     <%= image_tag asset_path("izmir.jpg"), alt: "Placeholder", class: "h-64 w-full rounded-lg object-cover lg:h-auto lg:w-1/3" %>
  <% end %>

  <div class="flex flex-col justify-between lg:w-2/3">
    <div>
      <div class="mb-3 flex items-center justify-between text-gray-500">
        <span class="bg-primary-100 text-primary-800 dark:bg-primary-200 dark:text-primary-800 inline-flex items-center rounded px-2.5 py-0.5 text-xs font-medium"> <%= post.category.name %> </span>
        <span class="text-sm" title="<%= post.created_at.strftime('%B %d, %Y at %H:%M') %>">
          <%= time_ago_in_words(post.created_at) %> ago
        </span>
      </div>
      <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
        <a href="<%= post_path(post) %>"><%= post.title %></a>
      </h2>
      <p class="mb-5 font-light text-gray-500 dark:text-gray-400"><%= truncate(post.body.to_plain_text, length: 100) %></p>
    </div>

    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <span class="font-medium text-sm text-black dark:text-gray-200"> <%= post.user.full_name %> </span>
      </div>
      <a href="<%= post_path(post) %>" class="text-black dark:text-gray-200 inline-flex items-center font-medium hover:underline">
        Read more
        <svg class="ml-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</article>