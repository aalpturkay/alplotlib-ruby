<nav data-controller="navbar" class="flex items-center justify-between md:px-24 px-6 py-4 border-b border-gray-200 dark:border-white  bg-white dark:bg-[#242525] w-full z-50 top-0">
  <div class="text-xl font-bold tracking-wide">
    <%= link_to "alplotlib", root_path, class: "font-mono dark:text-gray-200" %>
  </div>

  <div class="flex items-center gap-4">
    <% if authenticated? %>
      <%= render "shared/primary_link_to", button_text: "New Post", button_path: new_post_path %>
      <%= render "shared/primary_button", button_text: "Sign Out", button_path: session_path, button_method: :delete %>
    <% else %>
      <%= render "shared/primary_link_to", button_text: "Sign In", button_path: new_session_path %>
    <% end %>

    <button data-action="click->navbar#openMenu" class="md:hidden focus:ring-2 focus:ring-black focus:rounded-sm dark:focus:ring-white">
      <svg class="w-6 h-6 text-gray-800 dark:text-gray-100" fill="none" stroke="currentColor" stroke-width="2"
        viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

  </div>

  <!-- Mobile Menu -->

  <div data-navbar-target="menu"
      class="fixed inset-0 z-40 hidden flex items-end justify-center bg-black/50 backdrop-blur-sm">
    <div data-navbar-target="content"
        class="flex flex-col items-center justify-center bg-white border m-4 rounded-full p-6 w-full max-w-md text-center space-y-4 shadow-xl transform transition duration-300 scale-95 opacity-0 translate-y-[50px]">
      <% if not authenticated? %>
          <%= render "shared/primary_link_to", button_text: "Sign In", button_path: new_session_path, is_mobile: true %>
      <% else %>
          <%= render "shared/primary_link_to", button_text: "New Post", button_path: new_post_path, is_mobile: true %>
          <%= render "shared/primary_button", button_text: "Sign Out", button_path: session_path, button_method: :delete, is_mobile: true %>
      <% end %>
      <button data-action="click->navbar#closeMenu" class="text-sm text-gray-500 hover:text-black">Close</button>
    </div>
  </div>

</nav>

